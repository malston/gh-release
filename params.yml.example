# GitHub Release Pipeline Parameters (Enterprise Version)
# Copy this file to params.yml and update with your values
#
# ⚠️  SECURITY WARNING: Never put actual secrets in this file!
# ⚠️  Use Concourse credential references like ((vault-github-token))
# ⚠️  NEVER commit real tokens or private keys to git!

# === VAULT SECRETS (must use Concourse credential management) ===
github_token: ((vault-github-token))             # GitHub access token
git_private_key: ((vault-ssh-private-key))       # SSH private key
concourse_s3_access_key_id: ((vault-s3-access-key))      # S3 access key
concourse_s3_secret_access_key: ((vault-s3-secret-key))  # S3 secret key

# === NON-SENSITIVE CONFIGURATION (safe to put actual values) ===
# GitHub Configuration
owner: your-github-org
repository: your-repo-name
github_api_url: https://api.github.com  # For GitHub Enterprise: https://github.company.com/api/v3

# Git Repository Configuration
git_uri: git@github.com:your-org/your-repo.git
git_branch: main

# Release Configuration
release_tag: v1.0.0
release_name: Release v1.0.0
release_body: |
  ## What's Changed
  - Feature 1
  - Feature 2
  - Bug fixes
is_draft: false
is_prerelease: false

# Enterprise S3 Container Configuration
concourse_s3_access_key_id: ((vault-s3-access-key))
concourse_s3_secret_access_key: ((vault-s3-secret-key))
concourse-s3-bucket: my-concourse-bucket
concourse-s3-endpoint: https://s3.amazonaws.com
cflinux_current_image: cflinux

# Worker Configuration
worker_tags: default